               </font>
            </Label>
            <Label alignment="CENTER" styleClass="blue-icon-button" stylesheets="@MusicButton.css" text="S" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </GridPane>

      <!-- Other Controls -->
      <Button fx:id="ESC" layoutX="476.0" layoutY="673.0" styleClass="blue-icon-button" stylesheets="@MusicButton.css" text="ESC" textFill="#f5f5f5">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>

      <Button fx:id="placeBomb" layoutX="439.0" layoutY="443.0" text="SPACE">
         <font>
            <Font size="18.0" />
         </font>
         <stylesheets>
            <URL value="@style1.css" />
            <URL value="@Cartoon_UI.css" />
         </stylesheets>
         <styleClass>
            <String fx:value="button-cartoon" />
            <String fx:value="zoom-effect" />
         </styleClass>
      </Button>
      <Label fx:id="LabelOfkeyBox" layoutX="615.0" layoutY="89.0" prefHeight="155.0" prefWidth="448.0" text="Label" wrapText="true">
