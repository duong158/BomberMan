         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label alignment="CENTER" styleClass="blue-icon-button" stylesheets="@MusicButton.css" text="W" textFill="WHITE" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label alignment="CENTER" styleClass="blue-icon-button" stylesheets="@MusicButton.css" text="A" textFill="WHITE" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label alignment="CENTER" styleClass="blue-icon-button" stylesheets="@MusicButton.css" text="D" textFill="WHITE" GridPane.columnIndex="2" GridPane.rowIndex="1">
