      <!-- Power-up Buttons -->
      <Button fx:id="itemBuffBomb" layoutX="1131.0" layoutY="270.0" style="-fx-background-color: transparent; -fx-padding: 0;" styleClass="zoom-effect" stylesheets="@style1.css">
