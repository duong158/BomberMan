            <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
               <Image url="@powerup_bombs.png" />
            </ImageView>
         </graphic>
      </Button>

      <Button fx:id="itemBuffFlame" layoutX="1131.0" layoutY="448.0" style="-fx-background-color: transparent; -fx-padding: 0;" styleClass="zoom-effect" stylesheets="@style1.css">
