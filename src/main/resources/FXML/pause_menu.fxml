<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hoyocon.bomberman.PauseMenuController">
    <children>
        <!-- Background full size -->
        <ImageView fitHeight="540.0" fitWidth="960.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <image>
                <Image url="@../assets/textures/a-o-t-pixelcastle-1920.jpg" />
            </image>
        </ImageView>
        <!-- VBox căn giữa, spacing=20 để chia đều khoảng cách -->
        <VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="continueBtn" mnemonicParsing="false" onAction="#onContinue" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="CONTINUE" textFill="WHITE">
                    <font>
                        <Font name="Press Start 2P" size="20.0" />
                    </font>
                </Button>

                <Button fx:id="menuBtn" mnemonicParsing="false" onAction="#onMenu" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="MENU" textFill="WHITE">
                    <font>
                        <Font name="Press Start 2P" size="20.0" />
                    </font>
                </Button>

                <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#onExit" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="EXIT" textFill="WHITE">
                    <font>
                        <Font name="Press Start 2P" size="20.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        <Button fx:id="musicToggleBtn" alignment="TOP_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onToggleMusic" style="-fx-background-color: transparent; -fx-border-color: transparent;" text="♫ON" textFill="WHITE">
            <font>
                <Font name="Press Start 2P" size="20.0" />
            </font>
        </Button>
    </children>
</AnchorPane>